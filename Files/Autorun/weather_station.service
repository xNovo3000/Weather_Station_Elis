[Unit]
Description=Weather Station autorun service
Wants=network-online.target
After=nss-lookup.target

[Service]
ExecStart=/usr/bin/python3 /home/pi/Weather_Station_Elis/WeatherStation.py
WorkingDirectory=/home/pi/Weather_Station_Elis
Restart=always
RestartSec=15
TimeoutSec=30
WatchdogSec=86400

[Install]
WantedBy=multi-user.target